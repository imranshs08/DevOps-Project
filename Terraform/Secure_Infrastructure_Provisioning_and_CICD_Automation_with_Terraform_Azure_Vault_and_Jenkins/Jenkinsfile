pipeline {
  agent any

  stages {
    stage('Initialize Terraform') {
      steps {
        sh 'terraform init' 
      }
    }

    stage('Validate Format') {
      steps {
        sh 'terraform fmt'
      }

    stage('Validate Terraform') {
      steps {
        sh 'terraform validate'
      }
    }

    stage('Plan Terraform') {
      steps {
        sh 'terraform plan' 
      }
    


      
    }
  }
}
